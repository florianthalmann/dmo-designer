#@base <http://purl.org/ontology/studio/mobile#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix mo: <http://purl.org/ontology/mo/> .
@prefix mt: <http://purl.org/ontology/studio/multitrack#> .
@prefix ch: <http://???/co/charm#> .
@prefix : <#> .


<#>
	a owl:Ontology ;
	rdfs:comment "An ontology for describing Dynamic Music Objects" .

:DMO
	a owl:Class ;
	rdfs:subClassOf ch:Constituent ;
	rdfs:comment "A Dynamic Music Object is a hierarchical structure of musical objects with modifiable parameters" .

:Feature
	a owl:Class ;
	rdfs:subClassOf ch:Attribute ;
	rdfs:comment "A parameter is an immutable attribute of a DMO" .

:Parameter
	a owl:Class ;
	rdfs:subClassOf ch:Attribute ;
	rdfs:comment "A parameter is a mutable attribute of a DMO" .

#Audio parameters

:AudioParameter
	a owl:Class ;
	rdfs:subClassOf :Parameter ;
	rdfs:comment "" .

:Amplitude
	a owl:Class ;
	rdfs:subClassOf :AudioParameter ;
	rdfs:comment "" .

:PlaybackRate
	a owl:Class ;
	rdfs:subClassOf :AudioParameter ;
	rdfs:comment "" .

:Pan
	a owl:Class ;
	rdfs:subClassOf :AudioParameter ;
	rdfs:comment "" .

:Distance
	a owl:Class ;
	rdfs:subClassOf :AudioParameter ;
	rdfs:comment "" .

:Reverb
	a owl:Class ;
	rdfs:subClassOf :AudioParameter ;
	rdfs:comment "" .

#Segmentation parameters

:SegmentationParameter
	a owl:Class ;
	rdfs:subClassOf :Parameter ;
	rdfs:comment "" .

:Segmentation
	a owl:Class ;
	rdfs:subClassOf :SegmentationParameter ;
	rdfs:comment "" .

:SegmentCount
	a owl:Class ;
	rdfs:subClassOf :SegmentationParameter ;
	rdfs:comment "" .

:SegmentDuration
	a owl:Class ;
	rdfs:subClassOf :SegmentationParameter ;
	rdfs:comment "" .

:SegmentProportion
	a owl:Class ;
	rdfs:subClassOf :SegmentationParameter ;
	rdfs:comment "" .


#PROPERTIES

#DMO properties

:hasAudioPath
	a owl:DatatypeProperty ;
	rdfs:domain :DMO ;
	rdfs:range xsd:string ;
	rdfs:comment "" .
